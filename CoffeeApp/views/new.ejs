<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/beans" method="POST">
        <div class="field">
        <label>Title</label>
        <input type="text" name="bean[title]" placeholder="title">
        </div>
        <div class="field">
        <label>Image</label>
        <input type="text" name="bean[image]" placeholder="image url">
        </div>
        <div class="field">
            <label>Share a cool place</label>
            <textarea name="bean[body]"></textarea>
        </div>
        
        <button class="ui pink button" type="submit">Submit</button>
        
    </form>
</div>
