<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= bean.title %></div>
    <div class="ui top attached ">
        <div class="item">
            <img class="ui centered rounded image" src="<%= bean.image %>">
            <div class="content">
                <span><%= bean.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- bean.body%></p>
            </div>
            <a class="ui orange button" href="/beans/<%bean._id%>/edit">Edit</a>
            <form id="delete"action="/beans/<%= bean._id%>?_method=DELETE" method="POST">
                <button class="ui red  button">Delete</button>
            </form>
        </div>
    </div>
     
     
     
