<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=bean.title%></div>
    <form class="ui form" action="/beans/<%=bean._id%>?_method=PUT" method="POST">
        <div class="field">
        <label>Title</label>
        <input type="text" name="bean[title]" value="<%=bean.title%>">
        </div>
        <div class="field">
        <label>Image</label>
        <input type="text" name="bean[image]"value="<%=bean.image%>">
        </div>
        <div class="field">
            <label>Share a cool place</label>
            <textarea name="bean[body]"><%=bean.body%></textarea>
        </div>
        
        <button class="ui pink button" type="submit">Submit</button>
        
    </form>
</div>
<% include ./partials/footer %>